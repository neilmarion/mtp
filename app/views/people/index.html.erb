<h1>
  People
</h1>

<div class="pagemenu">
  <%= render partial: 'menu' %>
</div>

<table class="listing" cellpadding="0" cellspacing="0">
  <tr id="table_header">
    <th><%= sort_link @q, :last_name, t('.last_name'), params, remote: true %></th>
    <th><%= sort_link @q, :first_name, t('.fist_name'), params, remote: true %></th>
    <th><%= sort_link @q, :middle_name, t('.middle_name'), params, remote: true %></th>
    <th><%= t('.offices') %></th>
    <th><%= t('.organizations') %></th>
  </tr>
  <tbody id="people_table">
    <%= render 'people/people', people: @people %>
  </tbody>
</table>

<div id="add_person_div" style="display:none" title="<%= t('.add_person') %>" class="fingerme">
  <%= render 'add_person', person: Person.new %>
</div>
