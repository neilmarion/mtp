<div id="add_person_form">
  <%= form_for person, url: people_path, method: :post, remote: true do |f| %>
    <% if flash[:error] %>
      <div class="flash error"><%= raw flash[:error] %></div>
    <% end %>
    <%= hidden_field_tag :add_another %>
    <%= render 'people/person_form', person: person %>
    
