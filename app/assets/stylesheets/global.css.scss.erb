/* Divs */
$maxpagewidth: 11000px;
$minpagewidth: 978px;

/* Colors */
$blue: #0379AE;
$light-blue: #eaf1f6;
$light-gray: #F2F2F2;
$white: #fff;

/* Fonts */
$font-base: Tahoma, Arial;
$font-secondary: Arial, Verdana;

#outer {
  max-width: $maxpagewidth;
  min-width: $minpagewidth;
  padding: 0 12px;
  margin: 0 auto;
}

#global {
  text-align: right;
  font-size: 11px;
  margin-top: 20px;
  margin-bottom: 15px;
  height: 40px;
  line-height: 28px;
  .item {
    display: inline-block;
    border-left: 1px solid $blue;
    height: 28px;
    line-height: 18px;
    >a {
      padding: 5px;
      text-decoration: none;
    }
  }
  .item:first-child {
    border-left: none;
  }
}

#menutop {
  border-bottom: 1px solid #0379AE;
  a {color: $white;}
  padding: 10px;
}

#left {
  float: left;
  width: 205px;
  padding-top: 10px;
}

.block {
  /* border-bottom: 1px solid $blue; */
}

@mixin clearlist {
  list-style: none;
  margin: 0;
  padding: 0;
  li {
    display: inline-block; 
  }
}

ul.leftmenu {
  @include clearlist;
  font-size: 11px;
  h3 {
    margin: 0;
    font-size: 12px;
  }
  ul.indent {
    @include clearlist;
    margin: 0 0 0px 10px;
    padding: 0;
    font-size: 11px;
    li a {
      font-weight: normal;
    }
    li {
      display: block;
    }
  }
  li {
    display: block;
    a, h3 {
      display: block;
      line-height: 24px;
      padding-left: 10px;
      height: 24px;
    }
    > a {
      font-weight: bold;
    }
    .name {
      font-weight: bold;
    }
  }
  > li {
    padding-right: 15px;
  }
  li.selected {
    background: $light-blue;
    > a {
      background: $light-blue;
    }
  }
  a.delete_leader,
  a.delete_label {
    float: right;
    background: #999 !important;
    color: $white;
    width: 12px;
    height: 12px;
    line-height: 9px;
    margin-top: 6px;
    text-align: center;
    font-weight: bold !important;
    padding: 0;
  }
  a.delete_leader:hover,
  a.delete_label:hover {
    background: $blue;
    text-decoration: none;
  }
  a.edit_search,
  a.edit_search_label {
    float: right;
    background: #999 !important;
    color: $white;
    width: 12px;
    height: 12px;
    line-height: 9px;
    margin-top: 6px;
    text-align: center;
    font-weight: bold !important;
    padding: 0;
  }
  .name {
    display: inline-block;
  }
  .listaction {
    float: right;
    font-size: 10px;
    font-weight: normal;
    img {
      vertical-align: middle;
    }
  }
}

#main {
  margin-left: 205px;
}

.titlebar {
  background: $white;
  padding: 14px 14px;
  h1 {
    font-family: $font-base;
    color: #333333;
    font-size: 21px;
    margin: 0;
  }
  h3 {
    font-family: $font-base;
    color: #333333;
    font-size: 15px;
    margin-top: 2px;
  }
  h1 img {
    margin-right: 5px;
    vertical-align: initial;
  }
  a.backto {
    font-size: 12px;
    float: right;
  }
}

body#welcome_controller {
  .splash {
    background: #fff;
  }
  
  #logo {
    margin-top: 0px;
    margin-left: 0px;
  }
  .tutorials, .tour, .index, .privacy, .terms {
    margin-top: 0;
  }
}

.carea {
  padding-bottom: 20px;
  margin-left: 1px;
}

.orgwrap {
  width: 100%;
  overflow-x: auto;
  overflow-y: hidden;
}

.org_column {
  border: 1px solid silver;
  width: 250px;
  vertical-align: top;
  padding: 0px;
  display: inline-block;
  white-space: normal !important;
  .ctrl {
    display: none;
    font-size: 10px;
    text-transform: uppercase;
    margin-left: 20px;
    background: $blue;
    border-radius: 4px;
    line-height: 1.5em;
    margin-top: 3px;
    vertical-align: top;
    border: 1px solid silver;
    a {
      color: $white;
      padding: 0 4px;
    }
    a:hover {text-decoration: none;}
  }
  ul {
    list-style: none;
    margin: 0;
    padding: 0;
    overflow: auto;
    height: 300px;
    li {
      line-height: 1.75em;
      padding: 2px 5px;
      border-bottom: 1px solid #f0f0f0;
    }
    li:hover {
      background: $light-blue;
    }
    li:hover > .ctrl {
      display: inline-block;
    }
    li.selected {
      background: $blue;
      a {color: #fff;}
    }
  }
  .org_link {
    line-height: 1.25em;
    width: 75%;
    display: inline-block;
    text-decoration: none;
    white-space: normal;
  }
}

.org_empty {
  height: 327px;
  line-height: 300px;
  vertical-align: middle;
}

.org_big_add {
  text-align: center;
  background: $light-gray;
  padding: 15px;
  border-radius: 8px;
  margin: 26px auto;
  width: 100px;
  line-height: 1em !important;
  display:block;
  .plus {
    font-size: 50px;
    display: block;
    margin: 0 auto 10px auto;
    background: $white;
    width: 50px;
    height: 50px;
    line-height: 50px;
    border-radius: 8px;
  }
}
.org_big_add:hover {
  text-decoration: none;
}

.org_new {
  font-weight: bold;
  border-bottom: 1px solid silver;
  display: block;
  padding: 6px 4px;
}
.org_new:hover {
  background: $light-blue;
  text-decoration: none;
}

.form_no_sidebar {
  margin-left: 200px;
}

ul.pillmenu {
  @include clearlist;
}
ul.pillmenu {
  height: 24px;
  display: inline-block;
  border: 1px solid #808284;
  margin-right: 8px;
  border-radius: 5px;
  -moz-border-radius: 5px;
  -webkit-border-radius: 5px;
  background-color: #ffffff;
  overflow: hidden;
  &:hover {
    border: 1px solid #0379AE;
  }
  li {
    border-right: 1px solid #666;
    border-left: 1px solid #fff;
    margin: 0;
    padding: 0;
    float: left;
    display: block;
    a {
      padding: 0 9px;
      line-height: 24px;
      height: 24px;
      color: #000;
      font-weight: bold;
      font-size: 12px;
      display: block;
    }
    a:hover, a.active {
    	background-color: #C7DFF0;
      text-decoration: none;
    }
  }
  li:first-child {
    border-left: 0px;
  }
  li:last-child {
    border-right: 0px;
  }
  li.disabled {
    a {
      color: silver;
    }
  }
  li ul {
    position: absolute;
    background: white;
    padding: 0;
    width: 120px;
    border: 1px solid #999;
    margin-left: -1px;
    box-shadow: 0 2px 5px #bbb;
    li {
      float: none;
      display: block;
      border: none;
      text-align: left;
      a {font-weight: normal;}
      a:hover {background: #eee;}
    }
  }
}

.pagemenu {
  background: $light-blue;
  padding: 10px 15px;
  div.part_title {
    font-size: 18px;
    font-weight: bold;
    display: inline-table;
    padding: 0 15px 0 0;
  }
}

.listing {
  width: 100%;
  th {
    text-align: left;
    background: #c7dff0;
    padding: 4px 2px 3px 2px;
		vertical-align: top;
		&.hidden_questions {
		  text-align: center;
		}
  }
  .check {
    width: 30px;
    padding-left: 15px !important;
    text-align: left;
  }
  tr td{
    border-bottom: 1px solid silver;
    padding: 3px 2px;
    font-size: 12px;
  }
  tr:hover {
    background: #f5ffc4;
  }
  td.controls {
    width: 90px;
		white-space:nowrap;
  }
  td.name {
    width: 40%;
  }
  .checkbox_cell {
    width: 50px;
  }
  .spacer_cell {
    width: 20px;
  }
}

.listing {
  tfoot .totals {
    td {
      border-top: 1px solid silver;
      border-bottom: 0px;
      padding: 5px 0;
      background: #EAF1F6;
    }
    td:first-child {
      text-align: right;
      padding-right: 5px;
      font-weight: bold;
    }
  }
  th.groupname {
    width: 40%;
  }
}

textarea, input[type=text], input[type=password] {
  border: 1px solid silver;
  padding: 3px;
  font-size: 12px;
  width: 290px;
}

.office_select {
  border: 1px dashed #ccc;
  background: #F0F0F0;
  -webkit-border-radius: 0px;
  -moz-border-radius: 0px;
  border-radius: 0px;
  margin-bottom: 15px;
  width: 200px;
}

.formactions {
  line-height: 35px;
  .cancel {
    color: #999;
    margin-left: 10px;
  }
}



.dangerzone {
  width: 490px;
  border: 5px solid #f0f0f0;
  h3 {
    display: block;
    background: darkred;
    padding-left: 15px;
    margin: 0;
    color: #fff;
    text-shadow: 1px 1px 2px #000;
  }
  .content {
    margin: 0;
    padding: 15px;
    p {
      line-height: 1.25em;
      margin: 0 0 1em 0;
      clear: both;
      display: block;
    }
  }
}

/* clean gray
*******************************************************************************/
input[type=submit], button[type=submit], .cleangray, .cleangray:visited  {
  background-color: #eeeeee;
  background-image: -webkit-gradient(linear, left top, left bottom, from(#eeeeee), to(#cccccc));
  /* Saf4+, Chrome */
  background-image: -webkit-linear-gradient(top, #eeeeee, #cccccc);
  background-image: -moz-linear-gradient(top, #eeeeee, #cccccc);
  background-image: -ms-linear-gradient(top, #eeeeee, #cccccc);
  background-image: -o-linear-gradient(top, #eeeeee, #cccccc);
  background-image: linear-gradient(top, #eeeeee, #cccccc);
  border: 1px solid #ccc;
  cursor: pointer;
  border-bottom: 1px solid #bbb;
  -webkit-border-radius: 3px;
  -moz-border-radius: 3px;
  -ms-border-radius: 3px;
  -o-border-radius: 3px;
  border-radius: 3px;
  color: #333;
  font: bold 11px "Lucida Grande", "Lucida Sans Unicode", "Lucida Sans", Geneva, Verdana, sans-serif;
  line-height: 1;
  padding: 8px;
  text-align: center;
  text-shadow: 0 1px 0 #eee;
  width: 150px; }
  input[type=submit]:hover, button[type=submit]:hover, .cleangray:hover, .cleangray:hover {
    background-color: #dddddd;
    background-image: -webkit-gradient(linear, left top, left bottom, from(#dddddd), to(#bbbbbb));
    /* Saf4+, Chrome */
    background-image: -webkit-linear-gradient(top, #dddddd, #bbbbbb);
    background-image: -moz-linear-gradient(top, #dddddd, #bbbbbb);
    background-image: -ms-linear-gradient(top, #dddddd, #bbbbbb);
    background-image: -o-linear-gradient(top, #dddddd, #bbbbbb);
    background-image: linear-gradient(top, #dddddd, #bbbbbb);
    border: 1px solid #bbb;
    border-bottom: 1px solid #999;
    cursor: pointer;
    text-decoration: none;
    text-shadow: 0 1px 0 #ddd; }
  button.clean-gray:active {
    border: 1px solid #aaa;
    border-bottom: 1px solid #888;
    -webkit-box-shadow: inset 0 0 5px 2px #aaaaaa, 0 1px 0 0 #eeeeee;
    -moz-box-shadow: inset 0 0 5px 2px #aaaaaa, 0 1px 0 0 #eeeeee;
    -ms-box-shadow: inset 0 0 5px 2px #aaaaaa, 0 1px 0 0 #eeeeee;
    -o-box-shadow: inset 0 0 5px 2px #aaaaaa, 0 1px 0 0 #eeeeee;
    box-shadow: inset 0 0 5px 2px #aaaaaa, 0 1px 0 0 #eeeeee; }


