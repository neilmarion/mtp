@mixin clearlist {
  list-style: none;
  margin: 0;
  padding: 0;
  li {
    display: inline-block; 
  }
}

ul.leftmenu {
  @include clearlist;
  font-size: 11px;
  h3 {
    margin: 0;
    font-size: 12px;
  }
  ul.indent {
    @include clearlist;
    margin: 0 0 0px 10px;
    padding: 0;
    font-size: 11px;
    li a {
      font-weight: normal;
    }
    li {
      display: block;
    }
  }
  li {
    display: block;
    a, h3 {
      display: block;
      line-height: 24px;
      padding-left: 10px;
      height: 24px;
    }
    > a {
      font-weight: bold;
    }
    .name {
      font-weight: bold;
    }
  }
  > li {
    padding-right: 5px;
  }
  li.selected {
    background: $light-violet;
    > a {
      background: $light-violet;
    }
  }
  a.delete_leader,
  a.delete_label {
    float: right;
    background: #999 !important;
    color: $white;
    width: 12px;
    height: 12px;
    line-height: 9px;
    margin-top: 6px;
    text-align: center;
    font-weight: bold !important;
    padding: 0;
  }
  a.delete_leader:hover,
  a.delete_label:hover {
    background: $violet;
    text-decoration: none;
  }
  a.edit_search,
  a.edit_search_label {
    float: right;
    background: #999 !important;
    color: $white;
    width: 12px;
    height: 12px;
    line-height: 9px;
    margin-top: 6px;
    text-align: center;
    font-weight: bold !important;
    padding: 0;
  }
  .name {
    display: inline-block;
  }
  .listaction {
    float: right;
    font-size: 10px;
    font-weight: normal;
    img {
      vertical-align: middle;
    }
  }
}

